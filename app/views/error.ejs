    <body>
        <div>
            <main tabindex="-1">
                <h1 class="text_size_enormous"><%=title%></h1>
                <p> <%- include("utils/format.ejs", { text: message, types: [ "breakline" ] }); %> </p>
                <a href="/" class="primary padding_regular_wide margin_vertical_tiny"><%=res.localization.website.errors.to_main_button%></a>
            </main>
        </div>
    </body>
